@model MainApp.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href=~/css/entrystyle.css/>

<form method="post">
        <p>
            @ViewBag.Error
        </p>
        <p>
            <label asp-for="Login">Login</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login"  />
        </p>
        <p>
            <label asp-for="Password">Password</label><br />
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"  />
        </p>
        <p>
            @Html.CheckBox("remember")
            <label>Remember</label>
        </p>
        <p>
            <input type="submit" value="Send" />
        </p>
</form>
 
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
