@model MainApp.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "/Views/Shared/EntryLayout.cshtml";
}

<link rel="stylesheet" href=~/styles/entry/entry.css/>

@section Header{
    <h1>Вход в аккаунт</h1>
}

<form method="post" class="content-main">
        <div class="form-error">
            @ViewBag.Error
        </div>
        <div class="form-input">
            <label asp-for="Login">Login</label><br />
            <input type="text" asp-for="Login" /><br />
            <span asp-validation-for="Login"  />
        </div>
        <div class="form-input">
            <label asp-for="Password">Password</label><br />
            <input type="password" asp-for="Password" /><br />
            <span asp-validation-for="Password"  />
        </div>
        <div class="form-checkbox">
            @Html.CheckBox("remember")
            <label>Remember</label>
        </div>
        <div class="form-button">
            <button type="submit">Войти</button>
        </div>
</form>
 
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
